<form action="<%=cats_url%>" method='POST'>

  <h1>New Cat Info: </h1>
  <br>
  <label for='name'>Name:</label>
  <input type='text' name='cat[name]' id='name' value=''><br>

  <label for='sex'>Sex:</label>
  <input type='radio' name='cat[sex]' id='sex' value='M'>M
  <input type='radio' name='cat[sex]' id='sex' value='F'>F<br>

  <label for='birth_date'>Birth Date:</label>
  <input type='date' name='cat[birth_date]' id='birth_date' value=''><br>

  <label for='color'>Color:</label>
  <input type='text' name='cat[color]' id='color' value=''><br>
  

  <label for='description'>Description:</label>
  <br>
  <textarea rows='10' cols='30' name='cat[description]' id='description' value=''> </textarea>
  <br><input type='submit' value='Submit'>

</form>